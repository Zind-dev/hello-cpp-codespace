{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure (CMake)",
      "type": "shell",
      "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build (CMake)",
      "type": "shell",
      "command": "cmake --build build -j",
      "dependsOn": "Configure (CMake)",
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run Hello",
      "type": "shell",
      "command": "${workspaceFolder}/build/hello",
      "dependsOn": "Build (CMake)",
      "group": "test"
    }
  ]
}